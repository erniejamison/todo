<section class="todoapp">
  <header class="header">
    <h1>todos</h1>
  </header>

  <section class="main">
    <ul class="todo-list">

    </ul>
  </section>
</section>



<script>
  $(function() {                                  // AJAX request
    $.get("/tasks").success( function( data ) {  // what is the API?
      var htmlString = "";

      $.each(data, function(index, task) {    // jQuery ($) build HTML list
        var checkedStatus = task.done ? "checked" : "";
        var liElement = '<li><div class="view"><input class="toggle"    type="checkbox"' + checkedStatus + '><label>' + task.title + '</label></div></li>';
        htmlString += liElement;
      });
      var ulTodos = $('.todo-list');    // ulTodos is a js rep of the html
      ulTodos.html(htmlString);       // calls .html method on ulTodos and
                                      // passes the html to .todo-list
    });
  });
</script>
